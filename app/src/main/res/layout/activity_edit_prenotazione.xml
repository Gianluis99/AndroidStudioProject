<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientcolor4"
    tools:context=".EditPrenotazione">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="398dp"
        android:layout_height="106dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/iconprenotation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="418dp"
        android:layout_height="486dp"
        android:layout_marginTop="38dp"
        android:orientation="vertical"
        android:paddingStart="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="59dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Id Prenotazione:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textIdPrenotazione"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="62dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Giorno Prenotazione:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textGiornoPrenotazione"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="64dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Ora Prenotazione:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textOraPrenotazione"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="67dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Id Cliente Prenotato:"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textIdClientePrenotazione"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/deletePrenotazione"
        android:layout_width="69dp"
        android:layout_height="53dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        app:icon="@drawable/trasha"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>